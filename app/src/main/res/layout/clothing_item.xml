<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/clothing_item">

    <EditText
        android:id="@+id/itemTitle"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="4dp"
        android:text="@string/item_name"
        android:textColor="@color/teal_700"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/clothesView"
        android:layout_width="217dp"
        android:layout_height="202dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="84dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/add_clothing_foreground" />

    <CheckBox android:id="@+id/checkbox_buy"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="308dp"
        android:text="@string/buy"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <CheckBox android:id="@+id/checkbox_rent"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="356dp"
        android:text="@string/rent"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/priceView"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="328dp"
        android:text="@string/price"
        android:textColor="@color/teal_700"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/price_box"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_marginStart="252dp"
        android:layout_marginTop="308dp"
        android:text="$"
        android:textColor="@color/teal_700"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Des_box"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="420dp"
        android:hint="Description..."
        android:inputType="text"
        android:textColor="@color/teal_700"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/SubmitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="272dp"
        android:layout_marginTop="644dp"
        android:backgroundTint="@color/teal_200"
        android:text="@string/post_item"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>