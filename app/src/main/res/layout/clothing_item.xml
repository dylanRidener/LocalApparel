<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/clothing_item">

    <EditText
        android:id="@+id/itemTitle"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="4dp"
        android:hint="Clothing Item Name"
        android:inputType="text"
        android:textColor="@color/teal_700"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/clothesView"
        android:layout_width="217dp"
        android:layout_height="202dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/add_clothing_foreground" />


    <TextView
        android:id="@+id/priceView"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="296dp"
        android:text="@string/price"
        android:textColor="@color/teal_700"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/price_box"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_marginStart="188dp"
        android:layout_marginTop="276dp"
        android:hint="Type Here..."
        android:inputType="text"
        android:textColor="@color/teal_700"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Des_box"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="368dp"
        android:hint="Description..."
        android:inputType="text"
        android:textColor="@color/teal_700"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/PostRent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="580dp"
        android:backgroundTint="@color/teal_200"
        android:text="@string/post_rent"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/PostBuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/teal_200"
        android:text="@string/post_buy"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/PostRent"
        app:layout_constraintTop_toBottomOf="@+id/Des_box" />

</androidx.constraintlayout.widget.ConstraintLayout>